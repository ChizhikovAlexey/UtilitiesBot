<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping">

    <class name="chizhikov.utilitiesbot.data.db.entities.Tariff" table="tariffs">
        <id name="updateDate" column="update_date">
            <generator class="identity"/>
        </id>
        <property name="hotWater" column="hot_water"/>
        <property name="coldWater" column="cold_water"/>
        <property name="drainage" column="drainage"/>
        <property name="electricity" column="electricity"/>
    </class>
</hibernate-mapping>