<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping">

    <class name="chizhikov.utilitiesbot.data.db.entities.MonthData" table="month_data">
        <id name="date" column="date">
            <generator class="identity"/>
        </id>
        <property name="electricity" column="electricity"/>
        <property name="hotWaterBath" column="hot_water_bath"/>
        <property name="coldWaterBath" column="cold_water_bath"/>
        <property name="hotWaterKitchen" column="hot_water_kitchen"/>
        <property name="coldWaterKitchen" column="cold_water_kitchen"/>
    </class>
</hibernate-mapping>